<Window x:Class="WpfTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTests"
        mc:Ignorable="d"
        Title="WpfMainSender"  Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="45,24,0,0"
                 Text="{Binding Path=Angle, ElementName=Rotator}"/>
        <Slider HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="245,24,0,0" Maximum="600"
                Value="{Binding Path=X, ElementName=Translator}" Minimum="0"/>
        <Slider HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="415,24,0,0" Minimum="-180" Maximum="180"
                Value="{Binding  Path=Angle, ElementName=Rotator}"/>
        <Ellipse Fill="Blue" Stroke="Red" StrokeThickness="4" VerticalAlignment="Top"
                 HorizontalAlignment="Left" Width="80" Height="40" Margin="345,79,0,0" 
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="0" x:Name="Translator"/>
                    <RotateTransform Angle="0" x:Name="Rotator"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        

    </Grid>
</Window>
